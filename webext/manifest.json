{
  "manifest_version": 3,
  "name": "vogoplus.app",
  "version": "0.2.4",
  "description": "Intelligence for your benefits. Discover, manage, and optimize your membership perks.",
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "options_page": "options/index.html",
  "background": { "service_worker": "bg/serviceWorker.js", "type": "module" },
  "permissions": ["storage", "activeTab", "tabs"],
  "host_permissions": [
    "<all_urls>",
    "https://app.vogoplus.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/detector.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["logo.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
