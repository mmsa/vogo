{
  "manifest_version": 3,
  "name": "VogPlus",
  "version": "0.1.0",
  "action": { "default_popup": "popup/index.html" },
  "options_page": "options/index.html",
  "background": { "service_worker": "bg/serviceWorker.js", "type": "module" },
  "permissions": ["storage","activeTab","tabs"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [{ "matches": ["<all_urls>"], "js": ["content/detector.js"], "run_at": "document_idle" }]
}

