# Database Configuration
# For local development with docker-compose (ops/docker-compose.yml)
DATABASE_URL=postgresql://vogo:vogo@localhost:5432/vogo

# For production/docker-compose.prod.yml, use:
# DATABASE_URL=postgresql://vogo:vogo@db:5432/vogo

# PostgreSQL (used by docker-compose.prod.yml)
POSTGRES_USER=vogo
POSTGRES_PASSWORD=vogo
POSTGRES_DB=vogo

# JWT Authentication
# Generate a secure secret with: openssl rand -hex 32
JWT_SECRET=change-me-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OpenAI API Key (required for AI features)
OPENAI_API_KEY=your-openai-api-key-here

# CORS Configuration
# Comma-separated list of allowed origins
# For local development: http://localhost:5173,http://localhost:3000
# For production: https://app.vogoplus.app,https://www.vogoplus.app
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,chrome-extension://

# AI Model Configuration (optional, defaults shown)
EMBED_MODEL=text-embedding-3-small
MODEL_RECO=gpt-4o-mini
MODEL_EXTRACT=gpt-4o-mini
SEARCH_PROVIDER=duckduckgo
AI_MAX_PAGES=5

# Admin User (for seeding)
ADMIN_EMAIL=admin@vogoplus.app
ADMIN_PASSWORD=ChangeMe123!
